<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".MutualFundsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/box1"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Interest Calculator"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Principal Amount"
            android:textAlignment="textStart"
            android:textColor="#212121"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/edtAmount"
            android:background="@drawable/edtbackground"
            android:backgroundTint="@null"
            android:hint="   Amount" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Interset Rate in (%)"
            android:textAlignment="textStart"
            android:textColor="#212121"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/edtInterest"
            android:background="@drawable/edtbackground"
            android:backgroundTint="@null"
            android:hint="   Interest%" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Total Time in                    Years"
            android:textAlignment="textStart"
            android:textColor="#212121"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />


        <EditText
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/edtTime"
            android:background="@drawable/edtbackground"
            android:backgroundTint="@null"
            android:hint="   Time" />

    </LinearLayout>



    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textSize="18dp"
        android:id="@+id/btnCalculate"
        android:layout_gravity="center"
        android:background="@drawable/calculate_collect"
        android:layout_marginTop="5dp"/>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interest Amount"
                android:textSize="19dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/txtAmount"
                android:text="- - -"
                android:textSize="19dp" />

        </LinearLayout>




</LinearLayout>