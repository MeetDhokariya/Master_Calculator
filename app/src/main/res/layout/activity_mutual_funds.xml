<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".MutualFundsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/btnfinish"
            android:background="@drawable/box1"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Mutual Fund Calculator"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Montly Investment"
            android:textAlignment="textStart"
            android:textColor="#212121"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/investment"
            android:background="@drawable/edtbackground"
            android:backgroundTint="@null"
            android:hint="   500" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Expected Return in (%)"
            android:textAlignment="textStart"
            android:textColor="#212121"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/returnintrest"
            android:background="@drawable/edtbackground"
            android:backgroundTint="@null"
            android:hint="   25%" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Time Period in (yr)"
            android:textAlignment="textStart"
            android:textColor="#212121"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/timeperiod"
            android:background="@drawable/edtbackground"
            android:backgroundTint="@null"
            android:hint="   05" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear All"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/calculationbtn"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:background="@drawable/calculate_collect"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Invested"
              android:textSize="19dp"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="- - -"
              android:id="@+id/txtinvested"
              android:layout_gravity="center"
              android:textSize="19dp"/>


      </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Est. Returns"
                android:textSize="19dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/txtreturn"
                android:text="- - -"
                android:textSize="19dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:id="@+id/txttotal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Value"
                android:textSize="19dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/txtvalue"
                android:text="- - -"
                android:textSize="19dp" />


        </LinearLayout>


    </LinearLayout>




</LinearLayout>